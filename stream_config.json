{
  "nsfw_detection": {
    "enabled": true,
    "time_interval": 0.5,
    "blur_strength": 51
  },
  "gun_detection": {
    "enabled": true,
    "time_interval": 0.5,
    "confidence_threshold": 0.4,
    "device": "auto",
    "model_path": "weapon_detection.pt"
  },
  "transcription": {
    "enabled": true,
    "whisper_model": "tiny",
