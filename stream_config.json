  "audio_sync": {
    "enabled": true,
    "max_drift": 0.05,
    "delay_compensation": 0.0,
    "buffer_size": 3
  },
  "network": {
    "host": "localhost",
    "video_port": 9999,
    "audio_port": 9998
  },
  "video": {
    "target_fps": 24,
    "jpeg_quality": 60,
    "scale_factor": 0.9
  }
